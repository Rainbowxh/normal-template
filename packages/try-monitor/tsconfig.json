{
  "compilerOptions": {
    "declaration": true,       // 生成 .d.ts 声明文件
    "declarationMap": true,    // 生成 .d.ts.map 文件
    "emitDeclarationOnly": true, // 只生成声明文件，不生成 JS 文件
    "outDir": "./dist/types",  // 声明文件输出目录
    "rootDir": "./src",        // 源代码目录
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
